/* pages/index/index.wxss */
.header {
	display: flex;
	align-items: center;
	padding: 20rpx;
	border-bottom: 20rpx solid #f4f5f6;
}
.userHead {
	width: 150rpx;
	height: 150rpx;
	border-radius: 50%;
	margin-right: 20rpx;
}
.userName {
	font-size: 48rpx;
	font-weight: bold;
	height: 60rpx;
	display: flex;
	align-items: center;
	margin-bottom: 10rpx;
}
.statistics {
	width: 540rpx;
	display: flex;
	flex-direction: row;
	flex-wrap: wrap;
	color: #909399;
}
.statistics text {
	width: 50%;
	font-size: 28rpx;
	height: 40rpx;
	display: flex;
	align-items: center;
}
.scroll-row {
	width: 100%;
	white-space: nowrap;
	border-bottom: 1rpx solid #f4f5f6;
}
.scroll-row-item {
	display: inline-block;
	width: 375rpx;
	height: 100rpx;
	line-height: 100rpx;
	text-align: center;
	font-weight: bold;
	font-size: 34rpx;
	color: #909399;
}
.scroll-row-item.select {
	font-size: 40rpx;
	color: yellowgreen;
}
.list-item {
	padding: 20rpx;
	display: flex;
	align-items: center;
	flex-direction: row;
}
.list-item-hover {
	background-color: #f4f5f6;
}
.list-item-cover {
	width: 100rpx;
	height: 100rpx;
	margin-right: 20rpx;
	border-radius: 12rpx;
}
.list-item-inner {
	line-height: 50rpx;
	font-size: 28rpx;
	color: #909399;
}
.list-item-name text:first-child {
	font-size: 32rpx;
	color: #303133;
}
